        function animateProgress() {
            var progress = document.getElementById("progress");
            var width = 1;
            var interval = setInterval(function () {
                if (width >= 100) {
                    clearInterval(interval);
                } else {
                    width++;
                    progress.style.width = width + "%";
                    progress.innerText = width + "%";
                }
            }, 50);
        }


        function closeHTA() {
            window.close();
        }
    </script>
</body>
</html>
